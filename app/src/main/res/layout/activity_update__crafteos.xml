<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_Crafteos">

    <TextView
        android:id="@+id/cabezeraUpdateCrafteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="592dp"
        android:width="300dp"
        android:fontFamily="@font/letraminecraft"
        android:gravity="center"
        android:text="Modificar Crafteo"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textoIdInsertCrafteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="500dp"
        android:fontFamily="@font/minecraft_font"
        android:text="Id del Crafteo que quiere modificar:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateCrafteoId"
        android:layout_width="202dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="457dp"
        android:fontFamily="@font/minecraft_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComprobarIdUpdateCrafteo"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_marginStart="286dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="453dp"
        android:fontFamily="@font/minecraft_font"
        android:text="Comprobar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoNombreUpdateCrafteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="374dp"
        android:fontFamily="@font/minecraft_font"
        android:text="Nombre del Crafteo:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateCrafteoNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="329dp"
        android:fontFamily="@font/minecraft_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnVolverUpdateCrafteo"
        android:layout_width="131dp"
        android:layout_height="64dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="581dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/stone"
        android:fontFamily="@font/minecraft_font"
        android:onClick="onClick"
        android:text="Volver"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUpdateCrafteo"
        android:layout_width="131dp"
        android:layout_height="64dp"
        android:layout_marginStart="226dp"
        android:layout_marginTop="581dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/stone"
        android:fontFamily="@font/minecraft_font"
        android:onClick="onClick"
        android:text="Actualizar"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>